config service
	option anonymous_enable '0'
	option local_enable '1'
	option write_enable '1'
	option chroot_local_user '1'
	option user_sub_token '$USER'
	option local_root '/home/$USER/upload'
	option userlist_enable '1'
	option userlist_deny '0'
	option userlist_file '/etc/vsftpd.userlist'
	option seccomp_sandbox '0'
